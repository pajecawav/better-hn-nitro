{
	"private": true,
	"scripts": {
		"build": "cross-env FORCE_COLOR=1 run-s -l build:vite build:nitro",
		"build:vite": "vite build",
		"build:nitro": "nitro build",
		"dev": "cross-env FORCE_COLOR=1 run-p -l dev:*",
		"dev:vite": "vite --watch build",
		"dev:nitro": "nitro dev",
		"preview": "node .output/server/index.mjs",
		"lint": "cross-env FORCE_COLOR=1 run-p -l lint:*",
		"lint:eslint": "eslint .",
		"lint:tsc": "tsc --noEmit",
		"lint:format": "prettier . --check",
		"format": "prettier . --write",
		"clean": "rimraf .nitro .output",
		"prepare": "husky && nitropack prepare"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.0",
		"@commitlint/config-conventional": "^19.8.0",
		"@eslint/js": "^9.23.0",
		"@pajecawav/prettier-config": "^1.0.0",
		"@types/js-cookie": "^3.0.6",
		"@vercel/analytics": "^1.5.0",
		"cross-env": "^7.0.3",
		"eslint": "^9.23.0",
		"hono": "^4.7.5",
		"husky": "^9.1.7",
		"js-cookie": "^3.0.5",
		"lint-staged": "^15.5.0",
		"nitropack": "^2.11.7",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"sass": "^1.86.0",
		"tailwind-vars": "^0.1.6",
		"tiny-server-timing": "^0.1.5",
		"typescript-eslint": "^8.27.0",
		"vite": "^6.2.2",
		"vite-plugin-pwa": "^0.21.2"
	}
